<a href="{{  experiment.data.url }}" target="_blank" rel="noreferrer">
    <div class="card experiment flex direction-column">
        <div class="image" style="background-image: url('{{ experiment.data.image }}')"></div>
        <div class="body flex">
            <div>
                <p class="tag">{{ experiment.data.eyebrow }}</p>
                <h2 class="ff-heading fs-500 fw-700">{{ experiment.data.title }}</h2>
            </div>
            <p class="ff-heading text-accent fs-900">{{ experiment.data.id }}</p>
        </div>
    </div>
</a>